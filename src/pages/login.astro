---
import BaseLayout from '../layouts/BaseLayout.astro'

const loading = false
---

<BaseLayout
   title='Login'
   description='Enter to the data.'
>
   <section
      class='grid place-items-center content-center gap-4 sm:gap-6 text-center px-4'
      aria-label='Submit website for review form'
   >
      <h1>Login to Your Account</h1>

      <form class='mx-auto grid max-w-md place-items-center gap-1' id="login-account">
         <label class='input input-bordered flex items-center gap-2'>
            <svg
               xmlns='http://www.w3.org/2000/svg'
               viewBox='0 0 16 16'
               fill='currentColor'
               class='w-4 h-4 opacity-70'
               ><path
                  d='M2.5 3A1.5 1.5 0 0 0 1 4.5v.793c.026.009.051.02.076.032L7.674 8.51c.206.1.446.1.652 0l6.598-3.185A.755.755 0 0 1 15 5.293V4.5A1.5 1.5 0 0 0 13.5 3h-11Z'
               ></path><path
                  d='M15 6.954 8.978 9.86a2.25 2.25 0 0 1-1.956 0L1 6.954V11.5A1.5 1.5 0 0 0 2.5 13h11a1.5 1.5 0 0 0 1.5-1.5V6.954Z'
               ></path></svg
            >
            <input
               type="email"
               name="email"
               class='grow'
               placeholder='Email'
            />
         </label>

         <label class='input input-bordered flex items-center gap-2'>
            <svg
               xmlns='http://www.w3.org/2000/svg'
               viewBox='0 0 16 16'
               fill='currentColor'
               class='w-4 h-4 opacity-70'
               ><path
                  fill-rule='evenodd'
                  d='M14 6a4 4 0 0 1-4.899 3.899l-1.955 1.955a.5.5 0 0 1-.353.146H5v1.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-2.293a.5.5 0 0 1 .146-.353l3.955-3.955A4 4 0 1 1 14 6Zm-4-2a.75.75 0 0 0 0 1.5.5.5 0 0 1 .5.5.75.75 0 0 0 1.5 0 2 2 0 0 0-2-2Z'
                  clip-rule='evenodd'
               ></path></svg
            >
            <input
               type='password'
               name="password"
               class='grow'
               placeholder='Password'
            />
         </label>

         <button
            type='submit'
            class='btn btn-secondary btn-block'
         >
            {
               loading ? (
                  <>
                     <span class='loading loading-dots loading-sm' />
                     <span>Logging Inâ€¦</span>
                  </>
               ) : (
                  <>
                     <span>Login</span>
                  </>
               )
            }
         </button>
      </form>
   </section>

   <script>
    import { isInputError } from "astro:actions";
    import { actions } from "astro:actions";

    const loginForm = document.querySelector(
      "#login-account"
    ) as HTMLFormElement;

    loginForm.addEventListener("submit", async (e) => {
      e.preventDefault();
      const { error, data } = await actions.loginAccount.safe(
        new FormData(loginForm)
      );
      if (error) {
        console.log(error);
        if (isInputError(error)) {
          console.log(error.fields);
        }
        return;
      }

      window.location.reload();
    });
  </script>

</BaseLayout>
